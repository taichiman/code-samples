.page-header
  %h1 Список партнеров
%table.table.table-striped
  %thead
    %tr
      %th ИД
      %th Наименование
      %th Операции
  %tbody.sortable{data: {update_url: mass_update_order_at_api_partners_path}}
    - @partners.each do |partner|
      %tr{data: {id: partner.id}}
        %td= partner.id
        %td= partner.name_ru
        %td.partner_product_buttons
          .btn-group.btn-group-vertical
            = link_to 'Править', edit_admin_partner_path(partner), class: 'btn btn-mini'
            = link_to 'Удалить', admin_partner_path(partner), method: :delete, data: {confirm: 'Вы уверенны'}, class: 'btn btn-mini btn-danger'

= link_to 'Добавить', new_admin_partner_path, class: 'btn btn-primary'
= link_to 'Архивные партнеры', deleted_admin_partners_path, class: 'btn'

